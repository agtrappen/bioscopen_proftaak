<div class="container py-5">
    <div class="row">
        <div class="col-lg-7 mx-auto">
            <div class="bg-white rounded-lg shadow-sm p-5">
                <!-- Credit card form tabs -->
                <ul role="tablist" class="nav bg-light nav-pills rounded-pill nav-fill mb-3">
                    <li class="nav-item">
                        <a data-toggle="pill" href="#nav-tab-card" class="nav-link active rounded-pill">
                            Credit Card
                        </a>
                    </li>
                    <li class="nav-item">
                        <a data-toggle="pill" href="#nav-tab-paypal" class="nav-link rounded-pill">
                            Ideal
                        </a>
                    </li>
                    <li class="nav-item">
                        <a data-toggle="pill" href="#nav-tab-bank" class="nav-link rounded-pill">
                            Pin
                        </a>
                    </li>
                </ul>
                <!-- End -->
                <!-- Credit card form content -->
                <div class="tab-content">

                    <!-- credit card info-->
                    <div id="nav-tab-card" class="tab-pane fade show active">
                        <form role="form">
                            <div class="form-group">
                                <label for="username">Full name (on the card)</label>
                                <input type="text" name="username" placeholder="Jason Doe" required class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="cardNumber">Card number</label>
                                <div class="input-group">
                                    <input type="text" name="cardNumber" placeholder="Your card number" class="form-control" required>
                                    <div class="input-group-append">
                                        <span class="input-group-text text-muted">
                                            <i class="fa fa-cc-visa mx-1"></i>
                                            <i class="fa fa-cc-amex mx-1"></i>
                                            <i class="fa fa-cc-mastercard mx-1"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-8">
                                    <div class="form-group">
                                        <label><span class="hidden-xs">Expiration</span></label>
                                        <div class="input-group">
                                            <input type="number" placeholder="MM" name="" class="form-control" required>
                                            <input type="number" placeholder="YY" name="" class="form-control" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group mb-4">
                                        <label data-toggle="tooltip" title="Three-digits code on the back of your card">
                                            CVV
                                            <i class="fa fa-question-circle"></i>
                                        </label>
                                        <input type="text" required class="form-control">
                                    </div>
                                </div>



                            </div>
                            <button asp-controller="Customers" asp-action="ThankYou" class="subscribe btn btn-primary btn-block rounded-pill shadow-sm"> Confirm  </button>
                        </form>
                    </div>
                    <!-- End -->
                    <!-- Paypal info -->
                    <div id="nav-tab-paypal" class="tab-pane fade">
                        <form role="form">
              
                            <div class="form-group">
                                <select class="form-select" aria-label="Default select example">
                                    <option selected>Selecteer bank</option>
                                    <option value="1">Abn amro</option>
                                    <option value="2">Rabobank</option>
                                    <option value="3">ING</option>
                                </select>
                            </div>
                          
                            <a asp-controller="Customers" asp-action="ThankYou" type="button" class="subscribe btn btn-primary btn-block rounded-pill shadow-sm"> Confirm  </a>
                        </form>
                    </div>
                    <!-- End -->
                    <!-- bank transfer info -->
                    <div id="nav-tab-bank" class="tab-pane fade">
                        <a asp-controller="Customers" asp-action="ThankYou" type="button" class="subscribe btn btn-primary btn-block rounded-pill shadow-sm"> Confirm  </a>
                    </div>
                    <!-- End -->
                </div>
                <!-- End -->

            </div>
        </div>
    </div>
</div>