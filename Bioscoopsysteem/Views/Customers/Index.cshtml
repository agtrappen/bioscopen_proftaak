@model IEnumerable<Bioscoopsysteem.Models.Customer>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Naam
                </th>
                <th>
                    Email
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CustomerId">Aanpassen</a> |
                    <a asp-action="Details" asp-route-id="@item.CustomerId">Informatie</a> |
                    <a asp-action="Delete" asp-route-id="@item.CustomerId">Verwijderen</a> |
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>