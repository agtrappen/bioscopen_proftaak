@model Bioscoopsysteem.Models.Show

@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <h1>Details</h1>

    <div>
        <h4>Show</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Datum
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Start_date)
            </dd>
            <dt class="col-sm-2">
                Zaal
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HallId)
            </dd>
            <dt class="col-sm-2">
                Film
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.Title)
            </dd>
            <dt class="col-sm-2">
                Soort
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.Genre)
            </dd>
            <dt class="col-sm-2">
                subtitle
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.subtitle)
            </dd>
            <dt class="col-sm-2">
                Actor
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.Actor)
            </dd>
            <dt class="col-sm-2">
                Writting
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.Writting)
            </dd>
            <dt class="col-sm-2">
                Release Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.releaseDate)
            </dd>
            <dt class="col-sm-2">
                Beschrijving
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.Description)
            </dd>
            <dt class="col-sm-2">
                Duur
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.Duration)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ShowId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>

</div>