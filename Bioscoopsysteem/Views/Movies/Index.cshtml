@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@model IEnumerable<Bioscoopsysteem.Models.Movie>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <p>
        <a asp-controller="Shows" asp-action="IndexCurrentMovieWeek">Huidige (film)week</a>
    </p>
    <div class="ml-2">
        <form asp-action="Index" method="get">
            <select name="genre" id="genre">
                <option value="Drama">Drama</option>
                <option value="Crime, Drama">Crime, Drama</option>
                <option value="Action, Crime, Drama">Action, Crime, Drama</option>
                <option value="Crime, Drama">Crime, Drama</option>
            </select>   <input type="submit" value="OK" class="btn btn-primary" />
        </form>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @localizer["Titel"]
                </th>
                <th>
                    @localizer["Soort"]

                </th>
                <th>
                    @localizer["Beschrijving"]
                </th>
                <th>

                    @localizer["Duur"]

                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MovieId">Aanpassen</a> |
                        <a asp-action="Details" asp-route-id="@item.MovieId">Informatie</a> |
                        <a asp-action="Delete" asp-route-id="@item.MovieId">Verwijderen</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>