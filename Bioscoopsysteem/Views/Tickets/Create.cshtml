@model Bioscoopsysteem.Models.Ticket

@{
    ViewData["Title"] = "Koop ticket";
}

<div class="container">
    <h1>Koop je ticket</h1>

    <h4>Film placeholder - 16-03-2021 17:00</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="tariffSelect">Selecteer het soort ticket:</label>
                    <select class="form-control" id="tariffSelect">
                        @foreach (var tariff in ViewBag.tariffs)
                        {
                            <option value="@tariff.TariffId">@tariff.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerId" class="control-label"></label>
                    <input asp-for="CustomerId" class="form-control" />
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShowId" class="control-label"></label>
                    <input asp-for="ShowId" class="form-control" />
                    <span asp-validation-for="ShowId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SeatId" class="control-label"></label>
                    <input asp-for="SeatId" class="form-control" value="" />
                    <span asp-validation-for="SeatId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
